{% extends 'base.html.twig' %}

{% block head %} {% endblock %}

{% block title %}Enregistrement!{% endblock %}

{% block body %}

      <section align="center">
			<div class="container">
    		<div class="row d-md-flex justify-content-center">
    			<div class="col-md-12">
	    			<div class="wrap-appointment d-md-flex">
		    			<div class="col-md-8 bg-primary p-5 heading-section heading-section-white">
		    				<h2 class="mb-4">Enregistrement des Patients</h2>
		    				<form action="#" class="appointment was-validated" method="POST">
		    					<div class="row justify-content-center">
										<div class="col-md-6">
											<div class="form-group">
					              <input type="text" class="form-control" placeholder="Votre nom" name="nom">
					            </div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
					              <input type="text" class="form-control" placeholder="Pr&eacute;nom" name="prenom">
					            </div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
					    					<div class="input-wrap">
					            		<div class="icon"><span class="fa fa-calendar"></span></div>
					            		<input type="text" class="form-control appointment_date" placeholder="Date de naissance" name="naiss">
				            		</div>
					    				</div>
										</div>

                    <div class="col-md-6">
											<div class="form-group">
					    					<div class="form-field">
			          					<div class="select-wrap">
			                      <select name="Sexe" placeholder="Votre sexe" class="form-control">
			                      	<option value="">Masculin</option>
			                        <option value="">F&eacutemin</option>
			                        <option value="">Autre</option>
                              </select>
                               </div>
					              </div>
					    				</div>
										</div>

                    <div class="col-md-6">
											<div class="form-group">
					              <input type="text" class="form-control" placeholder="Ville de residence" name="ville">
					            </div>
										</div>
										
                    <div class="col-md-6">
											<div class="form-group">
					              <input type="text" class="form-control" placeholder="Adresse(Quartier)" name="adresse">
					            </div>
										</div>
										
                    <div class="col-md-6">
											<div class="form-group">
					              <input type="email" class="form-control" placeholder="Email" name="email">
                       	<div class="icon"> <span class="input-group-text" id="basic-addon2">@example.com</span></div>
					            </div>
										</div>

                    <div class="col-md-6">
											<div class="form-group">
					              <input type="tel" class="form-control" placeholder="Numero portable" name="num" pattern="[0-9]{9}" maxlength=9 required>
                      <div class="icon"><span class="validity"><span></div>
                      </div>
										</div>
										
                    <div class="col-md-6">
											<div class="form-group">
					              <input type="password" class="form-control" placeholder="Mot de passe" name="mdp">
					            </div>
										</div>
										
                    <div class="col-md-6">
											<div class="form-group">
					              <input type="password" class="form-control" placeholder="Confirmer le mot de passe" name="mdp2">
					            </div>
										</div>

                    <div class="col-md-6">
											<div class="form-group">
					              <textarea id="ice" class="md-textarea form-control" placeholder="Nom du Contact et Numero" rows="5" name="ice" required=""></textarea>
                         </div>
										</div>
                      <div class="col-md-6">
											<div class="form-group"></div></div>
										<div class="col-md-6">
											<div class="form-group">
					              <input type="submit" value="Envoyer" name="Ajout" class="btn btn-secondary py-3 px-4">
					            </div>
										</div>
		    					</div>
			          </form>
		    			</div>
    		</div>
    	</div>
    </section>          


{% endblock %}
